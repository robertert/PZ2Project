@model List<LoginApp.Models.Coach>

<h2>Coaches</h2>

<form asp-action="Coaches" method="get">
    <label for="team">Filter by team:</label>
    <select id="team" name="team">
        <option value="">All</option>
        @foreach (var team in ViewBag.Teams)
        {
            <option value="@team" selected="@(team == ViewBag.CurrentTeam)">@team</option>
        }
    </select>
    <button type="submit">Filter</button>
</form>

<table>
    <thead>
        <tr>
            <th>
                <a asp-action="Coaches" asp-route-sort="name">Name ▲</a>
                <a asp-action="Coaches" asp-route-sort="name_desc">▼</a>
            </th>
            <th>Description</th>
            <th>Team</th>
            <th>Team Country</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coach in Model)
        {
            <tr>
                <td>@coach.Name</td>
                <td>@coach.Description</td>
                <td>@coach.Team?.Name</td>
                <td>@coach.Team?.Country</td>
            </tr>
        }
    </tbody>
</table>